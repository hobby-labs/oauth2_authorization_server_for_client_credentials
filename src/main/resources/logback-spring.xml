<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Read the logging target property directly from application.yml -->
    <springProperty scope="context" name="logTarget" source="logging.appender.target" defaultValue="console"/>
    
    <!-- Simple console appender with standard pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender with rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/oauth2-server.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/oauth2-server.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Application specific logger -->
    <logger name="com.github.TsutomuNakamura.oauth2_authorization_server_for_client_credentials" level="INFO"/>
    
    <!-- Spring Security OAuth2 logger -->
    <logger name="org.springframework.security.oauth2" level="INFO"/>
    
    <!-- Reduce noise from verbose libraries -->
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.boot.actuate" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <!-- Conditional root logger based on logging.appender.target property -->
    <if condition='property("logTarget").equals("console")'>
        <then>
            <!-- Console logging -->
            <root level="INFO">
                <appender-ref ref="CONSOLE"/>
            </root>
        </then>
        <else>
            <!-- File logging (when target is "file" or any other value) -->
            <root level="INFO">
                <appender-ref ref="FILE"/>
            </root>
        </else>
    </if>

</configuration>
